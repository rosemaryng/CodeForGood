<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game"
    tools:context=".DailyActivity">

    <TextView
        android:id="@+id/view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bill_smith"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier=".6"
        android:text="What would you\nlike to\ntalk about?"
        android:textColor="@color/text_blue"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_feeling_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@android:color/white"
        android:tag="0"
        android:text="My Day"
        android:textColor="@color/text_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/view_feeling_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_text" />

    <Button
        android:id="@+id/view_feeling_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@android:color/white"
        android:tag="1"
        android:text="My Treatment"
        android:textColor="@color/text_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/view_feeling_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_feeling_0" />

    <Button
        android:id="@+id/view_feeling_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@android:color/white"
        android:tag="2"
        android:text="My Concerns"
        android:textColor="@color/text_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/view_feeling_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_feeling_1" />

    <Button
        android:id="@+id/view_feeling_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@android:color/white"
        android:tag="3"
        android:text="Friendships"
        android:textColor="@color/text_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/view_feeling_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_feeling_2" />

    <Button
        android:id="@+id/view_feeling_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@android:color/white"
        android:tag="4"
        android:text="Dreams"
        android:textColor="@color/text_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/view_feeling_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_feeling_3" />

    <Button
        android:id="@+id/view_feeling_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@android:color/white"
        android:tag="4"
        android:text="Random"
        android:textColor="@color/text_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_feeling_4" />

</androidx.constraintlayout.widget.ConstraintLayout>